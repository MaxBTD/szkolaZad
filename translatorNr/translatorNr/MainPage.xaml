<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="translatorNr.MainPage">
    <VerticalStackLayout
        Padding="20"
        Spacing="15">

        <Label Text="Enter a phoneword:" FontSize="20"/>
        <Entry x:Name="entPhoneWord" Text="1-555-NETMAUI"/>
        <HorizontalStackLayout>
            <Button
                x:Name="btnTranslate"
                Text="Translate"
                Clicked="onTranslate"
                />
            <Button
                x:Name="btnCall"
                Text="Call"
                Clicked="onCall"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
